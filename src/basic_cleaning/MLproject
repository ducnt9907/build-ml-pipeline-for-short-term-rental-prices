name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Fully qualified name of the input artifact (e.g. project-name/dataset-name:version)
        type: string

      output_artifact:
        description: Name of the output artifact to be produced (e.g. project-name/dataset-name:version)
        type: string

      output_type:
        description: Type of output artifac
        type: string

      output_description:
        description: Description of output artifact
        type: string

      min_price:
        description: Minimum allowed price for the price column
        type: float

      max_price:
        description: Maximum allowed price for the price column
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
